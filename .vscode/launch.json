  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/server/node_modules/mocha/bin/_mocha",
      "env": {
        "NODE_ENV": "test"
      },
      "args": [
        "--timeout",
        "99999",
        "--colors",
        "--recursive",
        "${workspaceFolder}/server/src/**/*.test.js"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
